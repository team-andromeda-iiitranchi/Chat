<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="11dp"
        android:textColor="@color/black_app"
        android:padding="5dp"
        android:id="@+id/timeView"
        android:text="DD-MM-YYYY"/>

    <LinearLayout
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/timeView"
        android:layout_below="@+id/timeView"
        android:background="@drawable/sent_message_background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/downloadOption"
            android:layout_width="166dp"
            android:layout_height="167dp"
            android:layout_alignEnd="@+id/timeView"
            android:layout_below="@+id/timeView"
            android:layout_marginStart="0dp"
            android:background="@color/white"
            android:src="@drawable/download_icon" />

        <TextView
            android:id="@+id/text"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/downloadOption"
            android:layout_marginStart="1dp"

            android:maxWidth="@dimen/message_max_width"
            android:text="@string/sent_text"
            android:textColor="@color/white"
            android:textSize="@dimen/message_text_size" />
    </LinearLayout>
</RelativeLayout>
